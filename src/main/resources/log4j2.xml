<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" strict="true" name="XMLConfigTest" packages="packages.to.search.for.plugins.goes.here">
	<Properties>
		<Property name="filename">target/test.log</Property>
	</Properties>
	<Filter type="ThresholdFilter" level="trace" />

	<Appenders>
		<Appender type="Console" name="STDOUT">
			<Layout type="PatternLayout" pattern="[%p] %d %C [%t]: %replace{%m}{\n}{\\n}%n" />
			<Filters>
				<Filter type="MarkerFilter" marker="FLOW" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<Filter type="MarkerFilter" marker="EXCEPTION" onMatch="DENY"
					onMismatch="ACCEPT" />
			</Filters>
		</Appender>
		<Appender type="Console" name="FLOW">
			<Layout type="PatternLayout" pattern="%C{1}.%M %m %ex%n" /><!-- 
				class and line number -->
			<Filters>
				<Filter type="MarkerFilter" marker="FLOW" onMatch="ACCEPT"
					onMismatch="NEUTRAL" />
				<Filter type="MarkerFilter" marker="EXCEPTION" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>
		</Appender>
		<Appender type="File" name="File" fileName="${filename}" append="false">
			<Layout type="PatternLayout">
				<Pattern>[%p] %d %C [%t]: %replace{%m}{\n}{\\n}%n</Pattern>
			</Layout>
		</Appender>
	</Appenders>

	<Loggers>
		<Logger name="org.apache.logging.log4j.test1" level="debug"
			additivity="false">
			<Filter type="ThreadContextMapFilter">
				<KeyValuePair key="test" value="123" />
			</Filter>
			<AppenderRef ref="STDOUT" />
		</Logger>

		<Logger name="org.apache.logging.log4j.test2" level="debug"
			additivity="false">
			<AppenderRef ref="File" />
		</Logger>

		<Root level="trace">
		    <AppenderRef ref="STDOUT"/>
		    <AppenderRef ref="FLOW"/>
		    <AppenderRef ref="File"/>
		</Root>
	</Loggers>

</Configuration>